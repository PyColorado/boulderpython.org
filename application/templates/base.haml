%html(class="dark" xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %title {% block title%}Boulder Python{% endblock %}
    %link(href='http://fonts.googleapis.com/css?family=Ubuntu+Mono' rel='stylesheet' type='text/css')
    %link(href="/css/main.css" rel="stylesheet")
    %link(rel="icon" type="image/png" href="/img/favicon.png")

    %script(src="https://use.fontawesome.com/8295aa01a7.js")

  %body
    .header
      %ul.nav-social
        %li
          %a(href="#" title="Switch to light theme" class="switch-light")
          %a(href="#" title="Switch to dark theme" class="switch-dark")
        %li
          %a(href="http://twitter.com/boulderpython" title="BoulderPython at Twitter")
            %i(class="fa fa-twitter")
        %li
          %a(href="http://meetup.com/boulderpython" title="BoulderPython at Meetup")
            %i(class="fa fa-meetup")
        %li
          %a(href="http://github.com/boulder-python" title="BoulderPython at Github")
            %i(class="fa fa-github")

    .body-content
      {% block content %}{% endblock %}

    .spacer
    .footer
      %a(href="https://us.pycon.org/2017/about/code-of-conduct/") Code of Conduct
      %a(href='/privacy') privacy
      .copyright
        {% block footer %}copyright &copy; 1996-{{ moment().format('YYYY') }} Boulder Python{% endblock %}

    {{ moment.include_jquery() }}
    {{ moment.include_moment() }}
    :javascript
      $(document).ready(function() {
        $('.switch-dark').hide().click(function(evt) {
          evt.preventDefault();

          $('.switch-light').show();
          $(this).hide();
          $('html').removeClass('light').addClass('dark');
        });

        $('.switch-light').click(function(evt) {
          evt.preventDefault();

          $('.switch-dark').show();
          $(this).hide();
          $('html').removeClass('dark').addClass('light');
        });
      });

